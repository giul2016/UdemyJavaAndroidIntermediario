<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/colorBackLight"
    card_view:cardCornerRadius="4dp"
    android:elevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_car_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/audir8" />

        <TextView
            android:id="@+id/text_car_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/img_car_pic"
            android:layout_alignStart="@+id/img_car_pic"
            android:layout_below="@+id/img_car_pic"
            android:layout_gravity="left"
            android:text="@string/modelo"
            android:textAllCaps="true"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/img_car_pic"
            android:layout_alignRight="@+id/img_car_pic"
            android:layout_below="@+id/img_car_pic"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:text="@string/ver_detalhes"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

